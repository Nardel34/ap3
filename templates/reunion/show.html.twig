{% extends 'base.html.twig' %} {% block title %}LPS : Réunions{% endblock %} {% block body %}

<h1>Vos réunions</h1>
<div class="loadingBar bg-success"></div>
<div class="wrap">
    {% for reunion in app.user.reunions %}
    <div class="card bg-secondary mb-3 card-me" style="max-width: 20rem;" id="card{{reunion.id}}">
        <div class="card-header">{{reunion.objet}}
            <i class="fa-solid fa-xmark delete" onclick="deleteReunion('{{reunion.id}}');"></i>
        </div>
        <div class="card-body">
            <p class="card-text">Le {{reunion.dateReunion|date("d/m/Y")}}</p>
        </div>
    </div>
    {% endfor %}
</div>
<a href="{{path('create_reunion')}}" class="btn btn-primary mt-5"><i class="fa-solid fa-plus"></i> Créer une réunion</a> {% endblock %}