{% extends 'base.html.twig' %} {% block title %}LPS : Evènement pour {{type.nomtype}}{% endblock %} {% block body %}

<h1>évènements pour {{type.nomtype}}</h1>
<div class="wrap">
    {% for event in eventsByType %}
    <div class="card bg-secondary mb-3 card-me" style="max-width: 20rem;">
        <div class="card-header">Le {{event.dateEvent}}</div>
        <div class="card-body">
            <p class="card-text">Animé par {{event.personnes.nom}} {{event.personnes.nom}}</p>
            {% if app.user.roles[0] == "ROLE_ELEVE" %}
            <a href="{{path('inscription', {'id':event.id})}}" class="btn btn-success btn-sm mt-5">S'inscrire</a> {% endif %}
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}