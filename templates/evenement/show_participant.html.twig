{% extends 'base.html.twig' %} {% block title %}LPS : Participants {{event.dateEvent|date("d/m/Y")}} {{event.type.nomtype}}{% endblock %} {% block body %}

<h2>Participants pour le {{event.type.nomtype}} du {{event.dateEvent|date("d/m/Y")}}</h2>
<div class="wrap">
    {% for inscrit in inscriptions %} {% if inscrit.absence == 0 %}

    <div class="card bg-secondary mb-3 card-me" style="max-width: 20rem;">
        <div class="card-header">{{inscrit.eleves.nom}} {{inscrit.eleves.prenom}}</div>
        <div class="card-body">
            <p class="card-text">{{inscrit.eleves.email}}</p>
        </div>
    </div>
    {% endif %} {% endfor %}
</div>

<br><br>
