        <div class="card-header">{{inscrit.eleves.nom}} {{inscrit.eleves.prenom}}</div>
        <div class="card-body">
            <p class="card-text">{{inscrit.eleves.email}}</p>
        </div>
    </div>
    {% endif %} {% endfor %}
</div>
{% endblock %}