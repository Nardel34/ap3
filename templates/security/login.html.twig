{% extends 'base.html.twig' %} {% block title %}Connexion{% endblock %} {% block body %}
<div class="block_login">
    <h1>Connexion</h1>
    {% if error %}
    <div class="alert alert-danger mt-5">
        L'adresse mail ou le mot de passe est incorrecte
    </div>
    {% endif %} {{form_start(formView)}}

    <div class="col mt-5">{{form_row(formView.email)}}</div>
    <div class="col mt-3">{{form_row(formView.password)}}</div>

    <button class="btn btn-success btn-sm mt-5">Se connecter</button> {{form_end(formView)}}
</div> {% endblock %}