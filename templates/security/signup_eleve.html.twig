{% extends "base.html.twig" %} {% block title %} Inscription élève {% endblock title %} {% block body %}

<h1>Inscription</h1>

{{form_start(formView)}}
<div class="row">
    <div class="col">
        {{form_row(formView.email)}}
        <div class="mt-3">{{form_row(formView.password)}}</div>
        <div class="mt-3">
            <label>Confirmez le mot de passe</label> {% if confException != '' %}
            <p style="margin-left: 20px; color: rgb(196, 0, 0); font-size: 0.9em;"><i class="fas fa-exclamation-circle" style="color: rgb(196, 0, 0);"></i> {{confException}}</p>
            {% endif %}
            <input type="password" name="confirm_password" class="form-control" placeholder="Confirmez le mot de passe">
        </div>
        <div class="mt-3">
            <label for="exampleSelect1">Choisir un abonnement</label> {% if tarifException != '' %}
            <p style="margin-left: 20px; color: rgb(196, 0, 0); font-size: 0.9em;"><i class="fas fa-exclamation-circle" style="color: rgb(196, 0, 0);"></i> {{tarifException}}</p>
            {% endif %}
            <select class="form-select" name="tarifchoice">
                <option value="">-- Choisir un tarif --</option>
                <option value="option1">14 - 18 ans, 500€</option>
                <option value="option2">18 - 25 ans, 1000€</option>
            </select>
        </div>
    </div>
    <div class="col">
        {{form_row(formView.nom)}}
        <div class="mt-3">{{form_row(formView.prenom)}}</div>
        <div class="mt-3">{{form_row(formView.age)}}</div>
    </div>
</div>

<button type="submit" class="btn btn-primary mt-5"><i class="fas fa-save"></i> S'inscrire</button> {{form_end(formView)}} {% endblock body %}